  <React.Fragment>
    <h1>Scroll Modal</h1>
    <ScrollModal />
    <h1>No Scroll Modal</h1>
    <NoScrollModal />
    <h1>No header Modal</h1>
    <NoHeaderModal />
    <h1>No full screen on mobile</h1>
    <NoFullScreenModal />
  </React.Fragment>
