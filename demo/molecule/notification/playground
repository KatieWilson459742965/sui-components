const BUTTONS = [
  {
    type: 'secondary',
    children: 'Secondary',
    negative: true
  },
  {
    type: 'primary',
    children: 'Primary',
    negative: true
  }
]

const TEXT = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis vitae orci consectetur, suscipit ligula vel, malesuada mi. Sed eleifend lacus sapien, ac elementum mi iaculis at.'

function showAlert () {
	alert('Close it!')
}

return (
  <div>
    <h1>Notification</h1>
    <h3>Info</h3>
    <MoleculeNotification 
      text={TEXT}
      buttons={BUTTONS}
      onClose={showAlert}
    />
    <h3>Success</h3>
    <MoleculeNotification 
      text={TEXT}
      type='success'
      buttons={BUTTONS}
      onClose={showAlert}
    />
    <h3>Warning</h3>
    <MoleculeNotification 
      text={TEXT}
      type='warning'
      buttons={BUTTONS}
      onClose={showAlert}
    />
    <h3>Error</h3>
    <MoleculeNotification 
      text={TEXT}
      type='error'
      buttons={BUTTONS}
      onClose={showAlert}
    />
    <h3>System</h3>
    <MoleculeNotification 
      text={TEXT}
      type='system'
      buttons={BUTTONS}
      onClose={showAlert}
    />
  </div>
)