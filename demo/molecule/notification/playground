const BUTTONS = [
  {
    type: 'secondary',
    children: 'Secondary',
    negative: true
  },
  {
    type: 'primary',
    children: 'Primary',
    negative: true
  }
]

const TEXT = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis vitae orci consectetur, suscipit ligula vel, malesuada mi. Sed eleifend lacus sapien, ac elementum mi iaculis at.'

function showAlert () {
	alert('Close it!')
}

function Title ({children}) {
  return <p style={{color: '#999', fontSize: 12, textTransform: 'uppercase'}}>{children}</p>
}

class EffectNotification extends React.Component {
  state = {
    show: this.props.show
  }

  toggleShow = () => {
    const show = !this.state.show
    this.setState({ show })
  }

  render () {
    const { show } = this.state
    const type = this.props.effectType
    const effect = { type, show }

    return(
      <div>
        <button 
          className={'sui-AtomButton sui-AtomButton--secondary'} 
          onClick={this.toggleShow}
          style={{ width: '100px' }}
        >
          { show ? 'Hide' : 'Show' }
        </button>
        {
          <MoleculeNotification 
            text={TEXT}
            buttons={BUTTONS}
            onClose={this.toggleShow}
            position={this.props.position}
            effect={effect}
          />
        }
      </div>
    )
  }
}

return (
  <div>
    <h1>Notification</h1>
    <h2>Types</h2>
    <Title>Info</Title>
    <MoleculeNotification 
      text={TEXT}
      buttons={BUTTONS}
      onClose={showAlert}
    />
    <Title>Success</Title>
    <MoleculeNotification 
      text={TEXT}
      type='success'
      buttons={BUTTONS}
      onClose={showAlert}
    />
    <Title>Warning</Title>
    <MoleculeNotification 
      text={TEXT}
      type='warning'
      buttons={BUTTONS}
      onClose={showAlert}
    />
    <Title>Error</Title>
    <MoleculeNotification 
      text={TEXT}
      type='error'
      buttons={BUTTONS}
      onClose={showAlert}
    />
    <Title>System</Title>
    <MoleculeNotification 
      text={TEXT}
      type='system'
      buttons={BUTTONS}
      onClose={showAlert}
    />
    <br/>
    <h2>Effects</h2>
    <table width="auto" cellPadding="8" cellSpacing="0" style={{padding: 15}}>
      <tbody>
        <tr> 
          <td></td>
          <td><Title>Slide</Title></td>
          <td><Title>Fade</Title></td>
        </tr>
        <tr> 
          <td><Title>Top</Title></td>
          <td><EffectNotification position='top' effectType='slide' show={false}/></td>
          <td><EffectNotification position='top' effectType='fade' show={false}/></td>
        </tr>
        <tr> 
          <td><Title>Bottom</Title></td>
          <td><EffectNotification position='bottom' effectType='slide' show={false}/></td>
          <td><EffectNotification position='bottom' effectType='fade' show={false}/></td>
        </tr>
        <tr> 
          <td style={{ verticalAlign: 'top', paddingTop: '20px' }}><Title>Relative</Title></td>
          <td></td>
          <td><EffectNotification position='relative' effectType='fade' show={false}/></td>
        </tr>
      </tbody>
    </table>
  </div>
)