const formUrl = 'https://webformbuilderpre.scmspain.com/cochesnet.html'
const redirectOnErrorUrl = 'http://pre.coches.net'
const redirectOnSuccessUrl = 'http://pre.coches.net'


class MyFormPta extends React.Component {
  constructor(props) {
    super(props)

    this.ptaRef = null
    this.setPtaRef = element => this.ptaRef = element
    this.handleRemoveDraft = this.handleRemoveDraft.bind(this)
  }

  handleRemoveDraft (event) {
    event.preventDefault()
    this.ptaRef.removeDraft()
  }

  render () {
    const { handleRemoveDraft, setPtaRef } = this
    return (
      <div>
        <button onClick={handleRemoveDraft}>Remove draft</button>

        <FormPta
          ref={setPtaRef}
          formUrl={formUrl}
          enableDraft
          draftId="suicomponentsTestDraftId"
          redirectOnErrorUrl={redirectOnErrorUrl}
          redirectOnSuccessUrl={redirectOnSuccessUrl}
        />
      </div>
    )
  }
}

return (<MyFormPta />)